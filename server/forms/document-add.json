{
  "form": {
    "schema": {
      "action": "add_document",
      "callback": {
        "action": "case",
        "value": "documents"
      },
      "title": "Add documents",
      "defaultActionLabel": "Add document",
      "fields": [
        {
          "component": "paragraph",
          "type": "display",
          "props": {
            "content": "Description to go here"
          }
        },
        {
          "component": "addDocument",
          "validation": [
            "required",
            "hasWhitelistedExtension"
          ],
          "props": {
            "name": "add_document",
            "action": "ADD_DOCUMENT",
            "documentType": "ORIGINAL",
            "className": "button-secondary-action",
            "label": "Document",
            "allowMultiple": true,
            "whitelist": "DOCUMENT_EXTENSION_WHITELIST"
          }
        },
        {
          "component": "entityList",
          "validation": [
            "required"
          ],
          "props": {
            "name": "primary_topic",
            "label": "Topic",
            "action": "TOPIC",
            "choices": [
              {
                "label": "Topic A",
                "value": "TOPIC_A"
              },
              {
                "label": "Topic B",
                "value": "TOPIC_B"
              }
            ]
          }
        },
        {
          "component": "entityList",
          "validation": [
            "required"
          ],
          "props": {
            "name": "primary_correspondent",
            "label": "Correspondent",
            "action": "CORRESPONDENT",
            "choices": [
              {
                "label": "Correspondent A",
                "value": "CORRESPONDENT_A"
              },
              {
                "label": "Correspondent B",
                "value": "CORRESPONDENT_B"
              }
            ]
          }
        }
      ],
      "secondaryActions": [
        {
            "component": "backlink",
            "props": {
                "label": "Cancel"
            }
        }
      ]
    }
  }
}